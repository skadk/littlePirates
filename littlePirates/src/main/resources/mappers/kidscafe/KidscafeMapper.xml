<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.littlePirates.project.dao.IKidscafeDAO">
 	<resultMap id="mapResult" type="com.littlePirates.project.model.KidscafeVO">
		<result property="kcNo" column="kcNo" />
		<result property="kcName" column="kcName" />
		<result property="kclat" column="kclat" />
		<result property="kcLng" column="kcLng" />
		<result property="kcAddress" column="kcAddress" />
	</resultMap>
	
 	<select id="listKidscafeInfo" resultMap="mapResult">
 		select *
 		FROM kidscafe
 	</select>
 	
 	<!-- 키워드로 주소 찾기 -->
 	<select id="searchKidsCafe" parameterType="string" resultType="string">
 		SELECT kcAddress
 		FROM kidscafe
 		WHERE kcName=#{keyword}
 	</select>
 	
 	<!-- 키즈카페 키워드 검색 -->
  <select id="kidscafeSearchkeyword" parameterType="string"  resultMap="mapResult">
		SELECT * 
		FROM kidscafe 			
		WHERE kcName Like CONCAT ('%',#{kcName},'%')  						 				
  </select>

  <select id="kidscafeSearchsido" parameterType="string"  resultMap="mapResult">
		SELECT * 	
		FROM kidscafe 
		where browsers=#{sido}; 						 				
  </select>
  
  
  </mapper>
  
